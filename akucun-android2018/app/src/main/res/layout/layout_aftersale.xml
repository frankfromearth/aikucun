<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/my_aftersale_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_5"
        android:paddingLeft="@dimen/global_padding"
        android:paddingRight="@dimen/global_padding"
        android:paddingTop="@dimen/space_5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/refund_and_aftersale"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_5"
            android:text="@string/check_all"
            android:textColor="@color/selector_normal_text"
            android:textSize="@dimen/text_size_small" />

        <ImageView
            style="@style/option_item_arrow_img"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <View
        style="@style/h_line"
        android:layout_marginLeft="@dimen/global_padding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_20"
        android:paddingTop="@dimen/global_padding">

        <LinearLayout
            android:id="@+id/aftersale_quehuo_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/aftersale_quehuo_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/text_normal"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/platform_shortage"
                android:textColor="@color/selector_normal_text"
                android:textSize="@dimen/text_size_normal_s" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/aftersale_cancel_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/aftersale_cancel_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/text_normal"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sale_user_cancel"
                android:textColor="@color/selector_normal_text"
                android:textSize="@dimen/text_size_normal_s" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/aftersale_tuihuo_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/aftersale_tuihuo_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/text_normal"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sale_return_goods"
                android:textColor="@color/selector_normal_text"
                android:textSize="@dimen/text_size_normal_s" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/aftersale_yituihuo_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/aftersale_yituihuo_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/text_normal"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sale_returned_goods"
                android:textColor="@color/selector_normal_text"
                android:textSize="@dimen/text_size_normal_s" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/aftersale_yiloufa_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/aftersale_yiloufa_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/text_normal"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aftersales_apply"
                android:textColor="@color/selector_normal_text"
                android:textSize="@dimen/text_size_normal_s" />
        </LinearLayout>

    </LinearLayout>

    <View style="@style/h_line" />

</LinearLayout>