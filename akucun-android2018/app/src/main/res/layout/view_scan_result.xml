<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_myinfo_changeaddress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/option_item"
            android:gravity="center_horizontal"
            android:background="@color/white">
            <TextView
                android:id="@+id/tv_title"
                style="@style/option_item_text_title"
                android:text="@string/scan_code_picking_confirmation" />
        </RelativeLayout>

        <View
            style="@style/h_line"
            android:layout_height="@dimen/space_4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="@dimen/space_8"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginTop="@dimen/space_5"
                    android:text="fodfjo"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_size_normal" />


                <TextView
                    android:id="@+id/tv_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginTop="@dimen/space_5"
                    android:text="@string/goods_intro_copyed_can_parse"
                    android:textColor="@color/color_accent"
                    android:textSize="@dimen/text_size_normal"
                    android:textStyle="normal" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_barcode"
            style="@style/option_item_text_title"
            android:textColor="@color/color_accent"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginTop="@dimen/space_5"
            android:text="@string/barcode" />

        <TextView
            android:id="@+id/tv_backup"
            style="@style/option_item_text_title"
            android:textColor="@color/color_accent"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginTop="@dimen/space_5"
            android:layout_marginBottom="@dimen/space_10"
            android:text="@string/scan_remark" />

        <View
            style="@style/h_line"
            android:layout_height="@dimen/space_10" />

        <RelativeLayout
            android:id="@+id/rl_done_btn"
            style="@style/option_item"
            android:gravity="center_horizontal">

            <TextView
                style="@style/option_item_text_title"
                android:text="@string/sale_sure"
                android:textColor="@color/color_accent" />

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>