<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/space_10"
    android:paddingBottom="@dimen/space_10"
    android:paddingLeft="@dimen/space_10"
    android:paddingRight="@dimen/space_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/productImage"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:layout_marginRight="@dimen/global_padding"
        android:layout_marginTop="@dimen/space_10"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10">

            <TextView
                android:id="@+id/contentTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_normal" />

        </RelativeLayout>

        <TextView
            android:id="@+id/barcode_tv"
            android:layout_marginTop="@dimen/space_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_accent"
            android:textSize="@dimen/text_size_normal" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5">

            <TextView
                android:id="@+id/skuTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/amountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_normal_s" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_10">

        <TextView
            android:id="@+id/txt_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_normal"
            android:visibility="visible"
            android:textSize="@dimen/text_size_small" />

        <Button
            android:id="@+id/remarkBtn"
            android:layout_width="@dimen/space_45"
            android:layout_height="@dimen/space_26"
            style="@style/button_common"
            android:background="@drawable/btn_bg_red_selector"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/remark"
            android:textSize="@dimen/text_size_small" />


            <TextView
                android:id="@+id/order_product_status"
                android:layout_width="0dp"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingBottom="@dimen/space_3"
                android:paddingLeft="@dimen/space_10"
                android:paddingTop="@dimen/space_3"
                android:textColor="@color/red"
                android:visibility="visible"
                android:textSize="@dimen/text_size_normal" />

    </LinearLayout>
</LinearLayout>
