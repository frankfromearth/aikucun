<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_select_bg"
        android:padding="10dp"
        android:weightSum="5">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2">

            <com.aikucun.akapp.widget.RoundImageView
                android:id="@+id/head_image"
                android:layout_width="@dimen/space_40"
                android:layout_height="@dimen/space_40"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_default_avatar" />
        </RelativeLayout>

        <TextView
            android:id="@+id/user_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/head_image"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="vip0"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:gravity="center">

            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                app:rcBackgroundColor="@color/color_bg_light"
                app:rcBackgroundPadding="0dp"
                app:rcMax="100"
                app:rcProgress="50"
                app:rcProgressColor="@color/color_accent"
                app:rcRadius="5dp"
                app:rcReverse="false"
                app:rcSecondaryProgress="0"
                app:rcSecondaryProgressColor="@color/color_accent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:text="$8220"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_12sp" />

        </RelativeLayout>
    </LinearLayout>

    <View
        style="@style/h_line"
        android:layout_marginLeft="10dp" />


</LinearLayout>