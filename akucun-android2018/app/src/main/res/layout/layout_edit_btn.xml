<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/space_5"
    android:paddingTop="@dimen/space_8">

    <com.aikucun.akapp.widget.ECTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_1"
        android:textColor="@color/selector_light_text"
        app:fontFamily="fontawesome"
        app:textIcon="\uF044"
        app:textSize="@dimen/text_size_normal_s" />

    <TextView
        android:id="@+id/address_edit_btn_internal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/space_3"
        android:paddingRight="@dimen/space_20"
        android:text="@string/editor"
        android:textColor="@color/selector_light_text"
        android:textSize="@dimen/text_size_small" />

</LinearLayout>