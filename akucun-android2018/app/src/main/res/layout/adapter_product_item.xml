<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:padding="@dimen/global_padding">

    <com.aikucun.akapp.widget.ColorFilterImageView
        android:id="@+id/headImage"
        android:layout_width="@dimen/space_45"
        android:layout_height="@dimen/space_45"
        android:layout_marginRight="@dimen/global_padding"
        android:layout_marginTop="@dimen/space_5"
        android:background="@drawable/btn_image_corner"
        android:padding="@dimen/space_1"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_10"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pinpaiTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/text_link"
                android:textSize="@dimen/text_size_normal_l"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/follow_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/quan" />


        </RelativeLayout>

        <com.aikucun.akapp.widget.ExpandTextView
            android:id="@+id/contentTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_size_normal" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:id="@+id/not_refundable_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:text="@string/not_refundable"
                android:textColor="@color/color_accent"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/promotion_iv"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_gravity="right|bottom"
                android:src="@drawable/icon_time_limit"
                android:visibility="gone" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/price_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="¥"
                    android:textColor="@color/color_accent"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/settlement_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-2dp"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/color_accent"
                    android:textSize="23sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <TextView
                android:id="@+id/tag_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/settlement_price_text" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/purchase_fee"
                    android:textColor="@color/color_accent"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="2dp"
                    android:text="¥"
                    android:textColor="@color/color_accent"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/purchase_fee_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-2dp"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/color_accent"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/double_purchase_fee_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-2dp"
                    android:layout_marginLeft="2dp"
                    android:text="x2"
                    android:textColor="@color/color_accent"
                    android:textSize="23sp"
                    android:textStyle="italic" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingBottom="@dimen/space_8"
            android:paddingTop="@dimen/space_8">

            <com.aikucun.akapp.view.MultiImageView
                android:id="@+id/multiImagView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/quehuoRl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#60FFFFFF"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:id="@+id/quehuoTv"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/btn_guang_circle"
                    android:gravity="center"
                    android:text="光"
                    android:textColor="@color/white"
                    android:textSize="40sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/rl_count_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/space_5"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_toRightOf="@+id/multiImagView"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/time_end_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_1"
                    android:text="@string/end_time"
                    android:textColor="@color/text_disabled"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/time_end_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_6"
                    android:text="10/25 12:00"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_normal_s"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/time_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_4"
                    android:text="@string/distance_activity_ends"
                    android:textColor="@color/color_accent"
                    android:textSize="@dimen/text_size_small" />

                <cn.iwgang.countdownview.CountdownView
                    android:id="@+id/countdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:isHideTimeBackground="false"
                    tools:isShowDay="true"
                    tools:isShowHour="true"
                    tools:isShowMillisecond="false"
                    tools:isShowMinute="true"
                    tools:isShowSecond="true"
                    tools:isShowTimeBgDivisionLine="false"
                    tools:isSuffixTextBold="true"
                    tools:isTimeTextBold="true"
                    tools:suffixDay="@string/day"
                    tools:suffixGravity="center"
                    tools:suffixHour=":"
                    tools:suffixMinute=":"
                    tools:suffixSecond=""
                    tools:suffixTextColor="@color/color_accent"
                    tools:suffixTextSize="12sp"
                    tools:timeBgColor="@color/color_accent"
                    tools:timeBgRadius="2dp"
                    tools:timeTextColor="@color/white"
                    tools:timeTextSize="12sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_count_down2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/multiImagView"
                android:layout_marginTop="@dimen/space_5"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/time_end_tips2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="结束时间"
                        android:textColor="@color/text_disabled"
                        android:textSize="@dimen/text_size_small"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/time_end_times2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_5"
                        android:text="10/25 12:00"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_normal_s"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/time_tips2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_4"
                        android:text="距活动结束"
                        android:textColor="@color/color_accent"
                        android:textSize="@dimen/text_size_small" />

                    <cn.iwgang.countdownview.CountdownView
                        android:id="@+id/countdown2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_8"
                        tools:isHideTimeBackground="false"
                        tools:isShowDay="true"
                        tools:isShowHour="true"
                        tools:isShowMillisecond="false"
                        tools:isShowMinute="true"
                        tools:isShowSecond="true"
                        tools:isShowTimeBgDivisionLine="false"
                        tools:isSuffixTextBold="true"
                        tools:isTimeTextBold="true"
                        tools:suffixDay="天"
                        tools:suffixGravity="center"
                        tools:suffixHour=":"
                        tools:suffixMinute=":"
                        tools:suffixSecond=""
                        tools:suffixTextColor="@color/color_accent"
                        tools:suffixTextSize="12sp"
                        tools:timeBgColor="@color/color_accent"
                        tools:timeBgRadius="2dp"
                        tools:timeTextColor="@color/white"
                        tools:timeTextSize="12sp" />

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5">

            <TextView
                android:id="@+id/timeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_normal_s" />

            <RelativeLayout
                android:id="@+id/rl_zhuanfa"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/forwardBtn"
                    style="@style/button_small_main"
                    android:layout_marginLeft="@dimen/space_10"
                    android:text="@string/forward"
                    android:visibility="visible" />
            </RelativeLayout>

            <TextView
                android:id="@+id/zhuanchang"
                style="@style/button_small_main"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/rl_zhuanfa"
                android:text="@string/special_event"
                android:visibility="visible" />

            <TextView
                android:id="@+id/consultation"
                style="@style/button_small_main"
                android:layout_toLeftOf="@+id/zhuanchang"
                android:text="@string/consultation"
                android:visibility="gone" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/skuContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_5"
                android:text="@string/choose_size_purchase_orders"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_normal_s" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_5"
                android:background="@drawable/sku_bg"
                android:orientation="vertical">

                <com.aikucun.akapp.view.SkuGridView
                    android:id="@+id/skuGridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="#00000000"
                    android:horizontalSpacing="@dimen/space_10"
                    android:listSelector="#00000000"
                    android:numColumns="auto_fit"
                    android:padding="@dimen/space_10"
                    android:scrollbars="none"
                    android:verticalSpacing="@dimen/space_10" />

                <TextView
                    android:id="@+id/buyBtn"
                    style="@style/button_small"
                    android:layout_gravity="end"
                    android:background="@drawable/btn_bg_buy_selector"
                    android:enabled="false"
                    android:text="@string/purchase"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/comment_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_3"
            android:background="@drawable/comment_bg"
            android:paddingTop="@dimen/space_10">

            <com.jude.easyrecyclerview.EasyRecyclerView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_2"
                app:recyclerClipToPadding="true"
                app:scrollbarStyle="insideOverlay" />
        </RelativeLayout>

    </LinearLayout>

    <!--
        <ViewStub
            android:id="@+id/viewStub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:layout_marginTop="@dimen/space_5" />
    -->
</LinearLayout>