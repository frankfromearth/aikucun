<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_title_toolbar" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/toolbar"
            android:background="@color/color_tab_line" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/team_rebate_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="짜"
                            android:textColor="@color/text_dark"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/paid_and_rebate_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/text_dark"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <TextView
                        style="@style/option_item_text_title"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:gravity="center"
                        android:text="@string/paid_and_rebate"
                        android:textColor="@color/text_dark" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="짜"
                            android:textColor="@color/color_accent"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/total_paid_and_rebate_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/color_accent"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <TextView
                        style="@style/option_item_text_title"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:gravity="center"
                        android:text="@string/total_paid_and_rebate"
                        android:textColor="@color/color_accent" />
                </LinearLayout>

            </LinearLayout>


            <View
                style="@style/h_line"
                android:layout_height="20dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/date_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <View style="@style/h_line" />

            <RelativeLayout
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/option_item_text_title"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:text="@string/my_sales_volume"
                    android:textColor="@color/text_dark" />

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="짜"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/my_sales_volume_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/text_dark"
                        android:textSize="25sp" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/option_item_text_title"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:text="@string/directly_team_sales"
                    android:textColor="@color/text_dark" />

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="짜"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/directly_team_sales_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/text_dark"
                        android:textSize="25sp" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/option_item_text_title"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:text="@string/team_sales_volume"
                    android:textColor="@color/text_dark" />

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="짜"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/team_sales_volume_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/text_dark"
                        android:textSize="25sp" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/option_item_text_title"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:text="@string/direct_team_rebate"
                        android:textColor="@color/text_dark" />
                    <TextView
                        android:id="@+id/team_sales_volume_percentage_text"
                        style="@style/option_item_text_title"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:textSize="12sp"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/color_accent" />
                </LinearLayout>


                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="짜"
                        android:textColor="@color/color_accent"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/direct_team_rebate_amount_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/color_accent"
                        android:textSize="25sp" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/option_item_text_title"
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:text="@string/indirect_team_rebate"
                        android:textColor="@color/text_dark" />
                    <TextView
                        android:id="@+id/personal_sales_volume_percentage_text"
                        style="@style/option_item_text_title"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:textSize="12sp"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/color_accent" />
                </LinearLayout>


                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="짜"
                        android:textColor="@color/color_accent"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/indirect_team_rebate_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/color_accent"
                        android:textSize="25sp" />
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_marginTop="10dp"
                style="@style/h_line"/>
            <RelativeLayout
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/month_amount_tv"
                    style="@style/option_item_text_title"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/color_accent" />

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="짜"
                        android:textColor="@color/color_accent"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/month_total_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/color_accent"
                        android:textSize="25sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>