<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="20.0dip">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/mydialog_shape_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="商品描述已复制"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="ssssssssssssssssssss"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>


            <CheckBox
                android:id="@+id/signle_img_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_4"
                android:text="@string/signle_img" />


            <CheckBox
                android:id="@+id/more_img_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_4"
                android:checked="false"
                android:text="@string/more_img" />


        <View
            android:id="@+id/last_line_view"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/layout_division_view" />

        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/negativeButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/mydialog_left_button_selector_bg"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/text_dark"
                android:textSize="16sp" />


            <View
                android:id="@+id/middle_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/layout_division_view" />

            <Button
                android:id="@+id/positiveButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:singleLine="true"
                android:layout_weight="1"
                android:ellipsize="middle"
                android:background="@drawable/mydialog_right_button_selector_bg"
                android:gravity="center"
                android:text="@string/sure"
                android:textColor="@color/color_accent"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>