<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingRight="@dimen/global_padding"
    android:paddingLeft="@dimen/space_10">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <TextView
            android:id="@+id/server_no"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/text_dark"
            android:gravity="center_vertical"
            android:text="@string/service_number"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/text_dark"
            android:text="@string/missing_reissue"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size_normal" />

    </RelativeLayout>

    <View style="@style/h_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <!-- 商品 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/global_padding"
            android:paddingRight="@dimen/global_padding"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:layout_marginRight="@dimen/global_padding"
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginBottom="@dimen/space_10"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/contentTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_dark"
                    android:layout_marginTop="@dimen/space_10"
                    android:textSize="@dimen/text_size_normal" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_5">

                    <TextView
                        android:id="@+id/skuTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_normal"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/amountTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_size_normal_s" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <View style="@style/h_line" />

        <RelativeLayout
            android:id="@+id/rl_detail"
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <TextView
                android:id="@+id/server_progress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/color_accent"
                android:gravity="center_vertical"
                android:text="@string/after_sales_schedule_lost_circulation_reissued"
                android:textSize="@dimen/text_size_normal" />

            <ImageView style="@style/option_item_arrow_img"/>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>