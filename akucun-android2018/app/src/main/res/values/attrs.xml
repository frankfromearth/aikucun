<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ECTextView">
        <attr name="touchSpring" format="boolean"/>
        <attr name="iconFont" format="boolean"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textIcon" format="string"/>
        <attr name="fontFamily" format="enum">
            <enum name="material" value="1"/>
            <enum name="fontawesome" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="ECRoundImageView">
        <attr name="border_thickness" format="dimension"/>
        <attr name="border_inside_color" format="color"/>
        <attr name="border_outside_color" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="ECPagerSlidingTab">
        <attr name="slidingBlock" format="reference|color"/>
        <attr name="allowWidthFull" format="boolean"/>
        <attr name="disableViewPager" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ExpandTextView">
        <attr name="showLines" format="integer"/>
    </declare-styleable>
    <!--银行卡、身份证自动格式化并识别-->
    <declare-styleable name="ContentWithSpaceEditText">
        <attr name="input_type" format="enum">
            <enum name="phone" value="0"/>
            <enum name="bank_card_no" value="1"/>
            <enum name="identify_card_no" value="2"/>
        </attr>
    </declare-styleable>
</resources>