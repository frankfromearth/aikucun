<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="textview_shadow">
        <item name="android:shadowColor">@color/darkgray</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <!-- 横向线条 -->
    <style name="h_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_divider</item>
    </style>
    <style name="h_line_mar_left">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@color/color_divider</item>
    </style>
    <!-- 纵向线条 -->
    <style name="v_line">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_divider</item>
    </style>

    <style name="edit_common" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <!--<item name="colorControlActivated">@color/color_primary</item>-->
    </style>


    <!-- 按钮 -->
    <style name="button_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_38</item>
        <item name="android:background">@drawable/btn_bg_selector</item>
        <item name="android:textColor">@color/selector_white_text</item>
        <item name="android:textSize">@dimen/text_size_button</item>
    </style>

    <style name="button_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/space_10</item>
        <item name="android:paddingRight">@dimen/space_10</item>
        <item name="android:paddingTop">@dimen/space_3</item>
        <item name="android:paddingBottom">@dimen/space_3</item>
        <item name="android:background">@drawable/btn_bg_selector</item>
        <item name="android:textColor">@color/selector_white_text</item>
        <item name="android:textSize">@dimen/text_size_normal_s</item>
    </style>

    <style name="button_small_main">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/space_10</item>
        <item name="android:paddingRight">@dimen/space_10</item>
        <item name="android:paddingTop">@dimen/space_3</item>
        <item name="android:paddingBottom">@dimen/space_3</item>
        <item name="android:background">@drawable/btn_bg_main</item>
        <item name="android:textColor">@color/selector_white_text</item>
        <item name="android:textSize">@dimen/text_size_normal_s</item>
    </style>
    <style name="button_icon">
        <item name="colorControlHighlight">#40333333</item>
        <item name="colorButtonNormal">@color/transparent</item>
    </style>

    <!-- Dialog Style -->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
    <!-- Progress Dialog Style -->
    <style name="ECProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 操作项样式 start -->
    <style name="option_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_45</item>
        <item name="android:background">@drawable/selector_option_item_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">@dimen/global_padding</item>
        <item name="android:paddingRight">@dimen/global_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="option_item_text_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="option_item_text_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="option_item_text_arrow_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/space_25</item>
        <item name="android:textSize">@dimen/text_size_normal_s</item>
    </style>

    <style name="option_item_arrow_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/space_13</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/icon_arrow_right</item>
    </style>

    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstars</item>
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">22dip</item>
    </style>

</resources>